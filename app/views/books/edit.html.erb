<h1>Editing Book</h1>

<%= form_with model:@book, local:true do |f| %>
<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %> of the parameters are in error.</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div>Title</div><br>
<p><%= f.text_field :title, autofocus: true, placeholder: "Title" %></p>
<div>Opinion</div><br>
<p><%= f.text_field :body, autofocus: true, placeholder: "Opinion" %></p>
<br>
<div><%= f.submit "Update Book", class: "btn btn-secondary" %></div>

<% end %>

