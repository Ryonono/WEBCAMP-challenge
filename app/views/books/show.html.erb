<%= render 'users/userinfo', user: @book.user, book_new: @book_new %>

<div class="col-lg-9">
<h1>Books Detail</h1>

<table class="table table-striped">
  <tr>
    <td>
      <%= link_to user_path(@book.user) do %>
      <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "60x60" %><br>
      <%= @book.user.name %>
      <% end %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td>コメント数：<%= book_comment.count %></td>
    <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-secondary" %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: 'Are you Sure to destroy?' }, class: "btn btn-secondary" %></td>
    <% end %>
  </tr>
</table>

<div class="comments">

  <table>
    <tr>
      <% comments.each do |comment| %>
      <td>
        <%= link_to user_path(@book.user) do %>
        <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "60x60" %><br>
        <%= @book.user.name %>
        <% end %>
      </td>
      <td>
          <%= comment %>
      </td>
      <td>
        <% if comment_user == current_user %>
          <%= link_to "Destroy", book_book_comment_path, method: :destroy, class: "btn btn-secondary" %>
      </td>
      <% end %>
    </tr>
  </table>

  <%= form_with model:[@book,@book_comments], local:true do |f| %>
    <div>
    <%= f.text_area :comments, placeholder: "please write down your comment" %>
    </div>
    <div><%= f.submit "Submit" %></div>

</div>