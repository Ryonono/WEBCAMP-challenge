<%= render 'users/userinfo', user: @book.user, book_new: @book_new %>

<div class="col-lg-9">
<h1>Books Detail</h1>

<table class="table table-striped">
  <tr>
    <td>
      <%= link_to user_path(@book.user) do %>
      <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "60x60" %><br>
      <%= @book.user.name %>
      <% end %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <!--この書き方でjsファイルを呼び出すことができるらしい-->
    <td class="favorite_button" >
      <!--いいね機能の部分テンプレート化-->
      <%= render 'favorites/favorites', book: @book %>
    </td>
    <td>コメント数：<%= @book.book_comments.count %></td>
    <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-warning" %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: 'Are you Sure to destroy?'}, class: "btn btn-danger" %></td>
    <% end %>
  </tr>
</table>

  <div class="comments_table">
    
     <%= render "comments/comments", book: @book %>
     
  </div>
 

  <div class="container-fluid">
    <!--remote: trueにする-->
  <%= form_with model:[@book,@bookcomment], remote: true do |f| %>
    
      <%= f.text_area :comment, placeholder: "please write down your comment!" %><br/>
    
    <%= f.submit "Submit", class: "btn btn-success" %>
    
  <% end %>
  </div>

</div>