<%= render 'users/userinfo', user: @book.user, book_new: @book_new %>

<div class="col-lg-9">
<h1>Books Detail</h1>

<table class="table table-striped">
  <tr>
    <td>
      <%= link_to user_path(@book.user) do %>
      <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "60x60" %><br>
      <%= @book.user.name %>
      <% end %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td>
      <%= render 'favorites/favorites', book: @book %>
      <!--いいね機能の部分テンプレート化-->
    </td>
    <td>コメント数：<%= @book.book_comments.count %></td>
    <% if @book.user == current_user %>
      <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-warning" %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: 'Are you Sure to destroy?'}, class: "btn btn-danger" %></td>
    <% end %>
  </tr>
</table>

  <table class="table table-striped">
    <% @book.book_comments.each do |comment| %>
      <tr>
        <td>
          <%= link_to user_path(comment.user) do %>
            <%= attachment_image_tag comment.user, :profile_image, fallback: "no_image.jpg", size: "60x60" %><br>
            <%= comment.user.name %>
          <% end %>
        </td>
         <!--うまく記述できないかったが、できた-->
        <td><%= comment.comment %></td>
        <td>
          <% if comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(@book,comment), method: :delete, class: "btn btn-danger" %>
           <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <div class="container-fluid">
  <%= form_with model:[@book,@bookcomment], local:true do |f| %>
    
      <%= f.text_area :comment, placeholder: "please write down your comment!" %><br/>
    
    <%= f.submit "Submit", class: "btn btn-success" %>
    
  <% end %>
  </div>

</div>