<table class="table table-striped">
  <% book.book_comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(comment.user) do %>
          <%= attachment_image_tag comment.user, :profile_image, fallback: "no_image.jpg", size: "60x60" %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
       <!--うまく記述できないかったが、できた-->
      <td><%= comment.comment %></td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "Destroy", book_book_comment_path(book,comment), method: :delete, class: "btn btn-danger", remote: true %>
          <% end %>
      </td>
    </tr>
  <% end %>
 </table>
 