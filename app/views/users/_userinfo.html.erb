<h3>User Info</h3>

  <div><%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg" %></div>
  <table>
    <tr>
      <td>Name</td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>Introduction</td>
      <td><%= current_user.introduction %></td>
    </tr>
  </table>

  <%= link_to "Profile Edit", edit_user_path(current_user) %>






<h3>New Book</h3>

<div><%= form_with model:@book, local:true do |f| %>

    <p>Title</p>
    <div><%= f.text_field :title, autofocus: true, placeholder: "Title" %></div>
    <p>Body</p>
    <div><%= f.text_area :body, autofocus: true, placeholder: "Body" %></div>

    <p><%= f.submit "Create Book" %></p>

    <% end %>
</div>