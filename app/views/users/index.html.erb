<%= render 'userinfo', user: @user, book: @book %>

<div class="col-lg-9">
<h1>Users</h1>

<table class="table table-striped">
  <tr>
    <th>Image</th>
    <th>Name</th>
    <th></th>
  </tr>
    <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "60x60" %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(@user), class: "btn btn-secondary" %></td>
  </tr>
  <% end %>
</table>

</div>