<%= render 'users/userinfo', user: @user, book: @book %>

<h1>Books</h1>

<div>
  <table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <%= @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
</div>
