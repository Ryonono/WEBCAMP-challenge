<%= render 'users/userinfo', user: @user, book: @book %>

<h1>Books</h1>

<div>
  <table>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <%= @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete, data: { confirm: 'Are you Sure to destroy?' } %></td>
    </tr>
    <% end %>
  </table>
</div>
